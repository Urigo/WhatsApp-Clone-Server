{
  "name": "whatsapp-clone-server",
  "description": "A newly created Tortilla project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/WhatsApp-Clone-Server.git"
  },
  "private": true,
  "scripts": {
    "prestart": "yarn codegen",
    "start": "ts-node index.ts",
    "test": "jest --runInBand --forceExit",
    "codegen": "graphql-codegen",
    "format": "prettier \"**/*.ts\" --write"
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@types/axios": "0.14.0",
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.6",
    "@types/cookie": "0.3.3",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.3",
    "@types/graphql": "14.5.0",
    "@types/jest": "25.1.4",
    "@types/jsonwebtoken": "8.3.8",
    "@types/node": "13.9.4",
    "@types/pg": "7.14.3",
    "jest": "25.2.3",
    "jest-junit": "10.0.0",
    "prettier": "2.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "apollo-server-express": "2.11.0",
    "apollo-server-testing": "2.11.0",
    "axios": "0.19.2",
    "bcrypt": "4.0.1",
    "cookie": "0.4.0",
    "cors": "2.8.5",
    "cookie-parser": "1.4.5",
    "express": "4.17.1",
    "graphql": "14.6.0",
    "graphql-import": "1.0.1",
    "graphql-scalars": "1.0.9",
    "graphql-postgres-subscriptions": "1.0.5",
    "graphql-tools": "4.0.7",
    "jsonwebtoken": "8.5.1",
    "pg": "7.18.2",
    "sql-template-strings": "2.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "globalSetup": "<rootDir>/tests/global-setup.ts",
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
