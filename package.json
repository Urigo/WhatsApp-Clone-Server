{
  "name": "whatsapp-clone-server",
  "description": "A newly created Tortilla project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/WhatsApp-Clone-Server.git"
  },
  "private": true,
  "scripts": {
    "prestart": "yarn codegen",
    "start": "ts-node index.ts",
    "test": "TZ=\"Asia/Jerusalem\" jest --runInBand --forceExit",
    "codegen": "graphql-codegen",
    "format": "prettier \"**/*.ts\" --write"
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.6.1",
    "@graphql-codegen/typescript": "1.6.1",
    "@graphql-codegen/typescript-resolvers": "1.6.1",
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.6",
    "@types/cookie": "0.3.3",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.1",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.18",
    "@types/jsonwebtoken": "8.3.3",
    "@types/lodash": "4.14.137",
    "@types/node": "12.7.2",
    "@types/pg": "7.11.0",
    "jest": "24.9.0",
    "jest-junit": "8.0.0",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "@graphql-modules/core": "0.7.10",
    "@graphql-modules/di": "0.7.10",
    "@safe-api/middleware": "0.0.2",
    "apollo-datasource-rest": "0.6.1",
    "apollo-server-express": "2.9.0",
    "apollo-server-testing": "2.9.0",
    "axios": "0.19.0",
    "bcrypt": "3.0.6",
    "cookie": "0.4.0",
    "cors": "2.8.5",
    "cookie-parser": "1.4.4",
    "express": "4.17.1",
    "graphql": "14.5.3",
    "graphql-import": "0.7.1",
    "graphql-scalars": "1.0.7",
    "graphql-postgres-subscriptions": "1.0.5",
    "graphql-tools": "4.0.5",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "pg": "7.12.1",
    "reflect-metadata": "0.1.13",
    "sql-template-strings": "2.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}